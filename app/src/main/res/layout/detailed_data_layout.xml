<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/shareFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cake_icon"
                app:layout_anchor="@id/ethnicityCard"
                app:layout_anchorGravity="center|right" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Birthday"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/wf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weight_fab_icon"
            android:tint="@color/md_white_1000"
            app:layout_anchor="@id/statusCard"
            app:layout_anchorGravity="center|right" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Weight"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/height_icon"
            android:tint="@color/md_white_1000"
            app:layout_anchor="@id/statusCard"
            app:layout_anchorGravity="center|right" />

        <TextView
            android:id="@+id/height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Height"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/is_veg_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weight_fab_icon"
            android:tint="@color/md_white_1000"
            app:layout_anchor="@id/statusCard"
            app:layout_anchorGravity="center|right" />

        <TextView
            android:id="@+id/is_veg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Is Veg ?"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/df"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weight_fab_icon"
            android:tint="@color/md_white_1000"
            app:layout_anchor="@id/statusCard"
            app:layout_anchorGravity="center|right" />

        <TextView
            android:id="@+id/drinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Drinks"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>